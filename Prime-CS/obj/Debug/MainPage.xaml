<Page
    x:Class="Prime_CS.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Prime_CS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="Main_Grid" Background="#FFCCCCCC">
        <TextBlock x:Name="Title_Label" Margin="0,0,0,56" TextWrapping="Wrap" Text="Prime" VerticalAlignment="Center" Height="56" Width="500" TextAlignment="Center" FontFamily="Segoe UI Light" FontSize="56" Foreground="Black" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='1' x:Name="Play_Button" Content="play" HorizontalAlignment="Center" Margin="0,56,0,0" VerticalAlignment="Center" Foreground="Black" BorderBrush="Black"                       />
    </Grid>
</Page>

